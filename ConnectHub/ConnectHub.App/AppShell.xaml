<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConnectHub.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ConnectHub.App.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="register" />

    <TabBar Route="main">
        <Tab Title="Feed" Icon="feed_icon.png">
            <ShellContent
                Title="Feed"
                ContentTemplate="{DataTemplate views:FeedPage}"
                Route="feed" />
        </Tab>
        
        <Tab Title="Chat" Icon="chat_icon.png">
            <ShellContent
                Title="Chat"
                ContentTemplate="{DataTemplate views:ChatPage}"
                Route="chat" />
        </Tab>
        
        <Tab Title="Profile" Icon="profile_icon.png">
            <ShellContent
                Title="Profile"
                ContentTemplate="{DataTemplate views:ProfilePage}"
                Route="profile" />
        </Tab>
    </TabBar>

</Shell>
